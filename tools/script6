	@tcp=`path6 -p icmp -P 450 -y 256 -d $fline --rate-limit 20pps`;
	foreach $line (@tcp){
		# Discard lines that do not contain a "probe" line
		if($line =~ m/\s+(\d+)\s+\((\S+)\)/){
			if($1 > $maxhopstrouble){
				$maxhopstrouble=$1;
				$maxhopstroubleip= $2;
			}
		}
	}

	$dropip="";
	for($i=0; $i<= $#ipsfree; $i++){
		if($ipsfree[$i] eq $maxhopstroubleip){
			if($i == $#ipsfree){
				$dropip= $ipsfree[$i];
				last;
			}
			else{
				$dropip= $ipsfree[$i+1];
				last;
			}
		}
	}

	print "Destination IPv6 address: $fline\n";
	print "Last responding node (no EHs): $maxhopsfreeip ($maxhopsfree hop(s))\n";
	print "Last responding node (256B ICMPv6 frags): $maxhopstroubleip ($maxhopstrouble hop(s))\n";
	if($maxhopsfreeip == $fline){
		if($maxhopstroubleip == $fline){
				print "Dropping node: No packet drops\n";
		}
		else{
			print "Dropping node: $dropip\n";
		}
	}
	else{
		print "Dropping node: $dropip\n";
	}
}
else{
	print "SI6 Networks IPv6 Toolkit v2.0\n";
	print "script6: A tool to make complex IPv6 tasks easy\n";
}
