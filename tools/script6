elsif($ARGV[0] eq "trace-do8-tcp"){
	$total=0;
	$response=0;
	$timeout=0;

	# Remove all items from the array of IP addresses
	undef @ipsfree;

	if($#ARGV < 1){
		print "Must specify an IPv6 address\n";
	}

	$fline=$ARGV[1];
	$maxhopsfree=0;
	$maxhopsfreeip="";

	@tcp=`path6 -p tcp -a 80 -d $fline --tcp-flags S --rate-limit 20pps`;
	foreach $line (@tcp){
		# Discard lines that do not contain a "probe" line
		if($line =~ m/\s+(\d+)\s+\((\S*)\)/){
			if($1 > $maxhopsfree){
				if($2 ne ""){
					$maxhopsfree=$1;
					$maxhopsfreeip=$2;
				}

				# We store the IPv6 addresses of all hops
				push(@ipsfree, $2);
			}
		}
	}

	$maxhopstrouble=0;
	$maxhopstroubleip="";

	@tcp=`path6 -p tcp -a 80 -u 8 -d $fline --tcp-flags S --rate-limit 20pps`;
	foreach $line (@tcp){
		# Discard lines that do not contain a "probe" line
		if($line =~ m/\s+(\d+)\s+\((\S*)\)/){
			if($1 > $maxhopstrouble){
				if($2 ne ""){
					$maxhopstrouble=$1;
					$maxhopstroubleip= $2;
				}
			}
		}
	}

	for($i=0; $i<= $#ipsfree; $i++){
		if($ipsfree[$i] eq $maxhopstroubleip){
			if($i == $#ipsfree){
				$dropip= $ipsfree[$i];
				last;
			}
			else{
				$dropip= $ipsfree[$i+1];
				last;
			}
		}
	}

	print "Destination IPv6 address: $fline\n";
	print "Last responding node (no EHs): $maxhopsfreeip ($maxhopsfree hop(s))\n";
	print "Last responding node (DO 8): $maxhopstroubleip ($maxhopstrouble hop(s))\n";

	if($maxhopsfreeip == $fline){
		if($maxhopstroubleip == $fltrace-do8-tcpine){
				print "Dropping node: No packet drops\n";
		}
		else{
			print "Dropping node: $dropip\n";
		}
	}
	else{
		print "Dropping node: $dropip\n";
	}
}
