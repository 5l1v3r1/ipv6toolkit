					$maxhopstroubleip= $2;
				}
			}
		}

		$dropip="";
		for($i=0; $i<= $#ipsfree; $i++){
			if($ipsfree[$i] eq $maxhopstroubleip){
				if($i == $#ipsfree){
					$dropip= $ipsfree[$i];
					last;
				}
				else{
					$dropip= $ipsfree[$i+1];
					last;
